<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:text="確認"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="返回"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/ZO"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:text="   0 "
        android:textSize="55sp"
        android:background="@drawable/trangle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/NM"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:text=" -30  "
        android:textSize="55sp"
        android:background="@drawable/trangle"
        android:layout_alignTop="@+id/NS"
        android:layout_toStartOf="@+id/NS" />

    <TextView
        android:id="@+id/PM"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:text="  30 "
        android:textSize="55sp"
        android:background="@drawable/trangle"
        android:layout_alignTop="@+id/PS"
        android:layout_toEndOf="@+id/PS" />

    <TextView
        android:id="@+id/ZOT"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZO"
        android:layout_above="@+id/ZO"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/NMT"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NM"
        android:layout_above="@+id/NM"
        android:layout_alignEnd="@+id/NM"
        android:layout_marginEnd="24dp" />

    <TextView
        android:id="@+id/PMT"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PM"
        android:layout_above="@+id/PM"
        android:layout_alignEnd="@+id/PM"
        android:layout_marginEnd="26dp" />

    <TextView
        android:id="@+id/NS"
        android:paddingLeft="15dp"
        android:background="@drawable/trangle"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:textSize="50sp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:inputType="numberSigned|numberDecimal"
        android:layout_alignTop="@+id/ZO"
        android:layout_toStartOf="@+id/ZO" />

    <EditText
        android:id="@+id/PS"
        android:background="@drawable/trangle"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:textSize="50sp"
        android:paddingLeft="15dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:inputType="numberSigned|numberDecimal"
        android:layout_alignTop="@+id/ZO"
        android:layout_toEndOf="@+id/ZO" />

    <TextView
        android:id="@+id/NST"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="31dp"
        android:text="NS"
        android:layout_above="@+id/NS"
        android:layout_toStartOf="@+id/ZO" />

    <TextView
        android:id="@+id/PST"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PS"
        android:layout_marginEnd="32dp"
        android:layout_above="@+id/PS"
        android:layout_toStartOf="@+id/PM" />
</RelativeLayout>